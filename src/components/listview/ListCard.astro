---
const { hideLeftBorder, custom, noBorder, data, href} = Astro.props;
const banner = data?.data?.banner;
---

<a href={`${href}/${data?.slug}`}>
    <li class="list-none">
        <article class:list={["relative group p-7 overflow-hidden cursor-pointer transition-color durati hover:bg-neutral-800/50", { "border-l-0": hideLeftBorder, ["border-t-0 border border-neutral-800"]: !noBorder, ["bg-neutral-800/40 rounded-xl my-5"]: noBorder  }]}>
            <div class="max-w-3xl">
                <div class="absolute w-full top-10 right-10 flex justify-end group-hover:translate-x-[3px] z-10">
                    <svg
                        width="18"
                        height="18"
                        viewBox="0 0 18 18"
                        fill="none"
                        class="transition-all duration-300 group-hover:translate-x-1 text-white"
                    >
                        <path
                        d="M5.25 12.75L12.75 5.25"
                        stroke="currentColor"
                        stroke-linecap="round"
                        stroke-linejoin="round"></path>
                        <path
                        d="M5.25 5.25H12.75V12.75"
                        stroke="currentColor"
                        stroke-linecap="round"
                        stroke-linejoin="round"></path>
                    </svg>
                </div>
                {custom ? (
                    <slot />
                ) : (
                    <div>
                        {
                            banner && (
                                <img transition:name="img" src={banner} class="mb-3 transition-all duration-200 group-hover:scale-[1.02]" alt="">
                            )
                        }
                        <h3 class="text-sm lg:text-base text-white mb-2">{data?.data?.title}</h3>
                        <p>
                            {
                                data?.data?.description
                            }
                        </p>
                    </div>
                )}
            </div>
        </article>
    </li>
</a>
