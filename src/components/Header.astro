---
import removeTrailingSlash from "@/utils/removeTrailingSlash";
import presentation from "@/data/presentation";

const pathname = removeTrailingSlash(Astro.url.pathname);
---

<header class="z-40 flex w-full flex-col items-center gap-2 md:flex-row md:justify-between">
  <!-- <a href={`mailto:${presentation.mail}`} class="hover:text-neutral-100"
    >{presentation.mail}</a
  > -->

  <div class="">
    <h2 class="font-[100] tracking-wide">LeulAria</h2>
    <p class="text-xs">Software Engineer</p>
  </div>

  <nav role="navigation">
    <ul role="list" class="flex flex-row gap-4">
      <li class="">
        <a
          href="/"
          class:list={{
            ["hover:text-neutral-100"]: true,
            ["text-neutral-100"]: pathname === "/",
          }}>Home</a
        >
      </li>
      <li>
        <a
          href="/experiances"
          class:list={{
            ["hover:text-neutral-100"]: true,
            ["text-neutral-100"]: pathname === "/experiances",
          }}>Experiances</a
        >
      </li>
      <li>
        <a
          href="/posts"
          class:list={{
            ["hover:text-neutral-100"]: true,
            ["text-neutral-100"]: pathname === "/posts",
          }}>Posts</a
        >
      </li>
    </ul>
  </nav>
</header>
